/* 全局样式变量 */
page {
  --primary-color: #1890ff;
  --success-color: #52c41a;
  --warning-color: #faad14;
  --error-color: #ff4d4f;
  --text-color: #333333;
  --text-color-secondary: #666666;
  --text-color-light: #999999;
  --border-color: #eeeeee;
  --bg-color: #f8f8f8;
  --card-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  --safe-area-bottom: env(safe-area-inset-bottom);

  background: var(--bg-color);
  font-family: -apple-system, BlinkMacSystemFont, "Helvetica Neue", Helvetica,
    Segoe UI, Arial, Roboto, "PingFang SC", "miui", "Hiragino Sans GB",
    "Microsoft Yahei", sans-serif;
  color: var(--text-color);
}

/* 通用容器 */
.container {
  min-height: 100vh;
  padding: 24rpx;
  box-sizing: border-box;
}

/* 卡片样式 */
.card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--card-shadow);
}

/* 标题样式 */
.title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-color);
  margin-bottom: 24rpx;
  line-height: 1.4;
}

.subtitle {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-color-secondary);
  margin-bottom: 16rpx;
  line-height: 1.4;
}

/* 按钮样式 */
.btn {
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  border-radius: 44rpx;
  transition: all 0.3s ease;
}

.btn-primary {
  background: var(--primary-color);
  color: #ffffff;
}

.btn-primary:active {
  opacity: 0.8;
}

.btn-default {
  background: #ffffff;
  color: var(--text-color);
  border: 2rpx solid var(--border-color);
}

.btn-default:active {
  background: var(--bg-color);
}

/* 列表样式 */
.list-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 2rpx solid var(--border-color);
}

.list-item:last-child {
  border-bottom: none;
}

/* 表单样式 */
.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  font-size: 28rpx;
  color: var(--text-color-secondary);
  margin-bottom: 12rpx;
}

.form-input {
  height: 88rpx;
  padding: 0 24rpx;
  background: #ffffff;
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  font-size: 28rpx;
}

/* 底部固定按钮 */
.footer-btn {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 24rpx;
  padding-bottom: calc(24rpx + var(--safe-area-bottom));
  background: #ffffff;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
}

.loading-text {
  font-size: 28rpx;
  color: var(--text-color-light);
  margin-left: 12rpx;
}

/* 空状态 */
.empty {
  padding: 48rpx 24rpx;
  text-align: center;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-color-light);
  margin-top: 16rpx;
}

/* 分割线 */
.divider {
  height: 2rpx;
  background: var(--border-color);
  margin: 24rpx 0;
}

/* 价格文本 */
.price {
  color: #ff6b00;
  font-weight: 500;
}

.price-small {
  font-size: 24rpx;
}

.price-large {
  font-size: 40rpx;
}

/* 标签 */
.tag {
  display: inline-block;
  padding: 4rpx 16rpx;
  font-size: 24rpx;
  border-radius: 4rpx;
  margin-right: 12rpx;
}

.tag-primary {
  background: rgba(24, 144, 255, 0.1);
  color: var(--primary-color);
}

.tag-success {
  background: rgba(82, 196, 26, 0.1);
  color: var(--success-color);
}

.tag-warning {
  background: rgba(250, 173, 20, 0.1);
  color: var(--warning-color);
}

.tag-error {
  background: rgba(255, 77, 79, 0.1);
  color: var(--error-color);
}
