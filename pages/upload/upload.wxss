/* 页面容器 */
.container {
  padding: 20rpx;
  background: #f5f7fa;
  min-height: 100vh;
  padding-bottom: 140rpx;
}

/* 上传区域 */
.upload-area {
  background: #fff;
  border-radius: 12rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  margin-bottom: 20rpx;
  border: 2rpx dashed #e8e8e8;
}

.upload-icon {
  width: 96rpx;
  height: 96rpx;
  margin-bottom: 20rpx;
}

.upload-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.upload-tips {
  font-size: 24rpx;
  color: #999;
}

/* 文件列表 */
.file-list {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.file-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.file-info {
  display: flex;
  align-items: center;
  flex: 1;
  margin-right: 20rpx;
}

.file-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.file-detail {
  flex: 1;
  min-width: 0;
}

.file-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.file-meta {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.file-type {
  margin-right: 16rpx;
}

.file-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  border-radius: 8rpx;
}

.action-btn image {
  width: 32rpx;
  height: 32rpx;
}

.action-btn.preview {
  background: #e6f7ff;
}

.action-btn.delete {
  background: #fff2f0;
}

/* 支持的文件类型 */
.support-types {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
}

.type-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.type-list {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
}

.type-item {
  text-align: center;
}

.type-item image {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 12rpx;
}

.type-item text {
  font-size: 24rpx;
  color: #666;
}

.type-tips {
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.type-tips .tip {
  display: block;
  font-size: 24rpx;
  color: #999;
  line-height: 1.8;
}

/* 底部按钮 */
.footer-btn {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx;
  background: #fff;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 32rpx;
}

.btn-primary {
  background: #1890ff;
  color: #fff;
}

.btn-primary.disabled {
  opacity: 0.6;
  background: #ccc;
}
