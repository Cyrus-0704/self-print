/* 页面容器 */
.container {
  min-height: 100vh;
  background: #f5f7fa;
  padding-bottom: 120rpx;
}

/* Banner */
.banner {
  width: 100%;
  height: 360rpx;
}

.banner image {
  width: 100%;
  height: 100%;
}

/* 通用section样式 */
.section {
  margin: 20rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

/* 服务列表 */
.service-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.service-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.service-item:active {
  background: #f0f0f0;
}

.service-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.service-info {
  flex: 1;
}

.service-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.service-desc {
  font-size: 24rpx;
  color: #999;
}

/* 价格说明 */
.price-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.price-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.price-title {
  font-size: 28rpx;
  color: #333;
}

.price-value {
  font-size: 28rpx;
  color: #ff6b00;
  font-weight: bold;
}

/* 联系信息 */
.contact-info {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.info-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.info-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.info-text {
  font-size: 28rpx;
  color: #333;
}

/* 快速打印按钮 */
.quick-print {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx;
  background: #fff;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.btn-print {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #1890ff;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
}

.btn-print:active {
  opacity: 0.8;
}
