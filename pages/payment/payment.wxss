/* 页面容器 */
.container {
  padding: 20rpx;
  background: #f5f7fa;
  min-height: 100vh;
  padding-bottom: 240rpx;
}

/* 卡片通用样式 */
.card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

/* 订单信息 */
.info-list {
  padding: 10rpx 0;
}

.info-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  line-height: 1.5;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-item .label {
  color: #666;
}

.info-item .value {
  color: #333;
  text-align: right;
}

/* 支付方式 */
.method-list {
  background: #fff;
  border: 2rpx solid #e8e8e8;
  border-radius: 8rpx;
}

.method-item {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  background: #fff;
}

.method-item.active {
  background: #f6f9fe;
}

.method-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.method-info {
  flex: 1;
}

.method-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.method-desc {
  font-size: 24rpx;
  color: #999;
}

.method-check {
  width: 40rpx;
  height: 40rpx;
}

.method-check image {
  width: 100%;
  height: 100%;
}

/* 支付金额 */
.amount-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.amount {
  display: flex;
  align-items: baseline;
}

.currency {
  font-size: 32rpx;
  color: #ff6b00;
  margin-right: 4rpx;
}

.number {
  font-size: 48rpx;
  font-weight: bold;
  color: #ff6b00;
}

/* 底部按钮 */
.footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  padding: 20rpx;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.btn-group {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 32rpx;
}

.btn-default {
  background: #fff;
  color: #666;
  border: 2rpx solid #e8e8e8;
}

.btn-primary {
  background: #1890ff;
  color: #fff;
}

.btn-primary.disabled {
  opacity: 0.6;
}

.safe-tips {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #999;
}

.safe-tips .icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

/* 加载状态 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-content {
  text-align: center;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
  animation: rotate 1s linear infinite;
}

.loading-content text {
  font-size: 28rpx;
  color: #666;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 30rpx;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 旋转动画 */
@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}
