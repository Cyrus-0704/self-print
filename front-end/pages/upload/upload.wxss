.container {
  padding: 20rpx;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.upload-area {
  margin: 30rpx 0;
}

.upload-btn {
  background-color: #07c160;
  color: white;
  width: 80%;
}

.file-list {
  margin-top: 30rpx;
}

.file-item {
  background: #f8f8f8;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.file-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.file-main {
  flex: 1;
  margin-right: 20rpx;
}

.file-name {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 4rpx;
}

.file-size {
  font-size: 24rpx;
  color: #999;
}

.file-status {
  display: flex;
  align-items: center;
}

.status-text {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  margin-right: 10rpx;
}

.status-text.uploading {
  background: #e6f7ff;
  color: #1890ff;
}

.status-text.success {
  background: #f6ffed;
  color: #52c41a;
}

.status-text.fail {
  background: #fff1f0;
  color: #ff4d4f;
}

.delete-btn {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 50%;
  background: #f5f5f5;
  color: #999;
  font-size: 32rpx;
}

.progress-bar {
  margin-top: 16rpx;
}

.action-area {
  margin-top: 40rpx;
}

.submit-btn {
  background-color: #1aad19;
  color: white;
  width: 80%;
}

.submit-btn[disabled] {
  background-color: #9ed99d !important;
  color: rgba(255, 255, 255, 0.6) !important;
}
