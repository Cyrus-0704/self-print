<view class="container">
  <view class="section files-section">
    <view class="section-title">打印文件</view>
    <view class="file-list">
      <view class="file-item" wx:for="{{files}}" wx:key="fileId">
        <text class="file-name">{{item.name}}</text>
        <text class="file-pages">{{item.pages}}页</text>
      </view>
    </view>
    <view class="total-pages">总页数：{{totalPages}}页</view>
  </view>

  <view class="section options-section">
    <view class="section-title">打印选项</view>
    
    <view class="option-item">
      <text>打印类型</text>
      <switch checked="{{printOptions.color}}" bindchange="toggleOption" 
              data-option="color" disabled="{{loading}}"/>
      <text class="option-label">{{printOptions.color ? '彩印' : '黑白'}}</text>
    </view>

    <view class="option-item">
      <text>打印方式</text>
      <switch checked="{{printOptions.doubleSided}}" bindchange="toggleOption" 
              data-option="doubleSided" disabled="{{loading}}"/>
      <text class="option-label">{{printOptions.doubleSided ? '双面' : '单面'}}</text>
    </view>

    <view class="option-item">
      <text>打印份数</text>
      <input type="number" value="{{printOptions.copies}}" bindchange="changeCopies" 
             class="copies-input" disabled="{{loading}}"/>
    </view>
  </view>

  <view class="section price-section">
    <view class="price-item">
      <text>单价：</text>
      <text>¥{{pricePerPage}}/页</text>
    </view>
    <view class="price-item total-price">
      <text>总价：</text>
      <text class="price">¥{{totalPrice}}</text>
    </view>
  </view>

  <view class="action-area">
    <button class="confirm-btn" bindtap="confirmOrder" 
            loading="{{loading}}" disabled="{{loading}}">
      确认订单
    </button>
  </view>

  <view class="loading-mask" wx:if="{{loading}}">
    <view class="loading-content">
      <view class="loading-icon"></view>
      <text class="loading-text">加载中...</text>
    </view>
  </view>
</view> 