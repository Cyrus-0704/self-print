.container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
  position: relative;
}

.section {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.file-list {
  margin-bottom: 20rpx;
}

.file-item {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #eee;
}

.file-name {
  color: #333;
  font-size: 28rpx;
}

.file-pages {
  color: #666;
  font-size: 28rpx;
}

.total-pages {
  text-align: right;
  color: #666;
  font-size: 28rpx;
}

.option-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.option-item text {
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
}

.option-label {
  color: #666 !important;
  margin-left: 10rpx !important;
}

.copies-input {
  width: 100rpx;
  text-align: center;
  border: 1rpx solid #ddd;
  border-radius: 6rpx;
  margin-left: 20rpx;
}

.price-item {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
}

.total-price {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.price {
  color: #f00;
  font-size: 36rpx;
  font-weight: bold;
}

.action-area {
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.confirm-btn {
  background-color: #07c160;
  color: white;
  width: 100%;
}

.confirm-btn[disabled] {
  background-color: #9ed99d !important;
  color: rgba(255, 255, 255, 0.6) !important;
}

/* 加载遮罩 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.loading-content {
  text-align: center;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
