.container {
  padding: 30rpx 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
  position: relative;
}

.status-icon {
  text-align: center;
  padding: 40rpx 0;
}

.status-text {
  display: block;
  margin-top: 20rpx;
  font-size: 32rpx;
  color: #333;
}

.order-info {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  color: #666;
  font-size: 28rpx;
}

.value {
  color: #333;
  font-size: 28rpx;
}

.price {
  color: #f00;
  font-size: 36rpx;
  font-weight: bold;
}

.payment-method {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.method-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.method-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.method-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.method-name {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.method-selected {
  color: #07c160;
  font-weight: bold;
}

.action-area {
  display: flex;
  justify-content: space-between;
  padding: 40rpx 0;
}

.cancel-btn,
.pay-btn,
.retry-btn {
  width: 45%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 32rpx;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.cancel-btn[disabled] {
  background: #f5f5f5;
  color: #999;
}

.pay-btn {
  background: #07c160;
  color: #fff;
}

.pay-btn[disabled] {
  background: #9ed99d;
}

.retry-btn {
  width: 100%;
  background: #07c160;
  color: #fff;
}

.notice {
  text-align: center;
  margin-top: 40rpx;
}

.notice-text {
  font-size: 24rpx;
  color: #999;
}

/* 加载遮罩 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.loading-content {
  text-align: center;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
