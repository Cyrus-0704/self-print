.container {
  padding: 30rpx 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.status-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.status-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.order-id {
  font-size: 28rpx;
  color: #666;
}

.status-text {
  font-size: 28rpx;
  font-weight: bold;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

.status-text.pending {
  background: #e6f7ff;
  color: #1890ff;
}

.status-text.printing {
  background: #f6ffed;
  color: #52c41a;
}

.status-text.completed {
  background: #f6ffed;
  color: #52c41a;
}

.status-text.failed {
  background: #fff1f0;
  color: #ff4d4f;
}

.progress-section {
  margin: 40rpx 0;
  position: relative;
}

.progress-text {
  position: absolute;
  right: 0;
  top: -40rpx;
  font-size: 24rpx;
  color: #666;
}

.print-info {
  margin: 40rpx 0;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
}

.info-label {
  color: #666;
  font-size: 28rpx;
}

.info-value {
  color: #333;
  font-size: 28rpx;
}

.error-message {
  text-align: center;
  color: #ff4d4f;
  font-size: 28rpx;
  margin: 20rpx 0;
}

.action-area {
  display: flex;
  justify-content: space-between;
  padding: 40rpx 0;
}

.action-btn {
  flex: 1;
  margin: 0 20rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 32rpx;
  background: #f5f5f5;
  color: #666;
}

.action-btn.primary {
  background: #07c160;
  color: #fff;
}

.notice {
  text-align: center;
  margin-top: 40rpx;
}

.notice-text {
  font-size: 24rpx;
  color: #999;
}
