.container {
  padding: 40rpx 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
  padding: 40rpx 0;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.service-list {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.service-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  border: 2rpx solid #eee;
  transition: all 0.3s;
}

.service-item:active {
  background: #f5f5f5;
}

.service-icon {
  font-size: 48rpx;
  margin-right: 30rpx;
}

.service-content {
  flex: 1;
}

.service-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.service-desc {
  font-size: 24rpx;
  color: #999;
}

.service-arrow {
  font-size: 36rpx;
  color: #ccc;
  font-weight: bold;
}

.coming-soon {
  opacity: 0.6;
  pointer-events: none;
}

.footer {
  text-align: center;
  margin-top: 80rpx;
  padding: 40rpx 0;
}

.footer-text {
  font-size: 24rpx;
  color: #999;
}
